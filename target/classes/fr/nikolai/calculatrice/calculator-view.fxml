<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.nikolai.calculatrice.CalculatorController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextField fx:id="display" GridPane.columnSpan="4" />
        <Button text="7" onAction="#processNumbers" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Button text="8" onAction="#processNumbers" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Button text="9" onAction="#processNumbers" GridPane.rowIndex="1" GridPane.columnIndex="2" />
        <Button text="/" onAction="#processOperators" GridPane.rowIndex="1" GridPane.columnIndex="3" />
        <Button text="4" onAction="#processNumbers" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Button text="5" onAction="#processNumbers" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        <Button text="6" onAction="#processNumbers" GridPane.rowIndex="2" GridPane.columnIndex="2" />
        <Button text="*" onAction="#processOperators" GridPane.rowIndex="2" GridPane.columnIndex="3" />
        <Button text="1" onAction="#processNumbers" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Button text="2" onAction="#processNumbers" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        <Button text="3" onAction="#processNumbers" GridPane.rowIndex="3" GridPane.columnIndex="2" />
        <Button text="-" onAction="#processOperators" GridPane.rowIndex="3" GridPane.columnIndex="3" />
        <Button text="0" onAction="#processNumbers" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <Button text="C" onAction="#clearDisplay" GridPane.rowIndex="4" GridPane.columnIndex="1" />
        <Button text="=" onAction="#processOperators" GridPane.rowIndex="4" GridPane.columnIndex="2" />
        <Button text="+" onAction="#processOperators" GridPane.rowIndex="4" GridPane.columnIndex="3" />
    </children>
</GridPane>
